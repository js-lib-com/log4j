<?xml version="1.0" encoding="UTF-8"?>
<log>
	<appender name="CON">
		<class>js.log4j.RemoteConsoleAppender</class>
		<format>%d{dd HH:mm:ss,SSS} [%t] %-5p %c %x- %m%n</format>
		<parameters>
			<port>8001</port>
		</parameters>
	</appender>
	
	<appender name="STD">
		<class>org.apache.log4j.ConsoleAppender</class>
		<format>%d{dd HH:mm:ss,SSS} [%t] %-5p %c %x- %m%n</format>
	</appender>

	<appender name="APP">
		<class>org.apache.log4j.RollingFileAppender</class>
		<format>%d{dd HH:mm:ss,SSS} [%t] %-5p %c %x- %m%n</format>
		<parameters>
			<encoding>UTF-8</encoding>
			<file>${logs}/app.log</file>
			<max-file-size>10MB</max-file-size>
			<max-backup-index>10</max-backup-index>
			<immediate-flush>true</immediate-flush>
		</parameters>
	</appender>
	
	<appender name="LIB">
		<class>org.apache.log4j.RollingFileAppender</class>
		<format>%d{dd HH:mm:ss,SSS} [%t] %-5p %c %x- %m%n</format>
		<parameters>
			<encoding>UTF-8</encoding>
			<file>${logs}/lib.log</file>
			<max-file-size>10MB</max-file-size>
			<max-backup-index>10</max-backup-index>
			<immediate-flush>true</immediate-flush>
		</parameters>
	</appender>
	
	<appender name="REQ">
		<class>org.apache.log4j.RollingFileAppender</class>
		<format>%d{dd HH:mm:ss,SSS} %m%n</format>
		<parameters>
			<encoding>UTF-8</encoding>
			<file>${logs}/requests.log</file>
			<max-file-size>10MB</max-file-size>
			<max-backup-index>10</max-backup-index>
			<immediate-flush>false</immediate-flush>
		</parameters>
	</appender>
	
	<appender name="SAP">
		<class>org.apache.log4j.RollingFileAppender</class>
		<format>%d{dd HH:mm:ss,SSS} %-5p %m%n</format>
		<parameters>
			<encoding>UTF-8</encoding>
			<file>${logs}/sap.log</file>
			<max-file-size>10MB</max-file-size>
			<max-backup-index>10</max-backup-index>
			<immediate-flush>true</immediate-flush>
		</parameters>
	</appender>

	<appender name="CXP">
		<class>org.apache.log4j.RollingFileAppender</class>
		<format>%d{dd HH:mm:ss,SSS} %-5p %m%n</format>
		<parameters>
			<encoding>UTF-8</encoding>
			<file>${logs}/cxp.log</file>
			<max-file-size>10MB</max-file-size>
			<max-backup-index>10</max-backup-index>
			<immediate-flush>true</immediate-flush>
		</parameters>
	</appender>

	<logger name="org.apache">
		<appender>STD</appender>
		<appender>LIB</appender>
		<level>ERROR</level>
	</logger>
	
	<logger name="js">
		<appender>STD</appender>
		<appender>APP</appender>
		<level>TRACE</level>
	</logger>
	
	<logger name="net">
		<appender>STD</appender>
		<appender>APP</appender>
		<level>TRACE</level>
	</logger>
	
	<logger name="ro">
		<appender>STD</appender>
		<appender>APP</appender>
		<level>DEBUG</level>
	</logger>
	
	<logger name="bbs">
		<appender>STD</appender>
		<appender>APP</appender>
		<level>DEBUG</level>
	</logger>
	
	<logger name="js.rpi">
		<appender>CON</appender>
		<level>TRACE</level>
	</logger>
	
	<logger name="js.web.DispatcherServlet">
		<appender>REQ</appender>
		<level>DEBUG</level>
	</logger>
	
	<logger name="ro.gnotis.oms.impl.TicketsLoaderManager">
		<appender>CON</appender>
		<appender>SAP</appender>
		<level>TRACE</level>
	</logger>
	
	<logger name="ro.gnotis.oms.impl.ServiceImpl">
		<appender>CON</appender>
		<appender>CXP</appender>
		<level>TRACE</level>
	</logger>
</log>
